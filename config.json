{
  "model_name": "naver-clova-ix/donut-base",
  "output_root": "results",
  "seed": 42,
  "split": {
    "train_ratio": 0.8,
    "valid_ratio": 0.1,
    "test_ratio": 0.1,
    "shuffle": true,
    "stratify": false
  },
  "train": {
    "num_train_epochs": 5,
    "per_device_train_batch_size": 2,
    "per_device_eval_batch_size": 2,
    "learning_rate": 5e-5,
    "warmup_steps": 200,
    "weight_decay": 0.01,
    "logging_steps": 10,
    "eval_steps": 200,
    "save_steps": 200,
    "gradient_accumulation_steps": 1,
    "fp16": true
  },
  "data": {
    "train_csv": "data/train_data.csv",
    "valid_csv": "data/validation_data.csv",
    "test_csv": "data/test_data.csv",
    "image_root": "."
  }
}

