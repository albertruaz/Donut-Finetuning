{
  "model_name": "naver-clova-ix/donut-base",
  "output_root": "results",
  "seed": 42,
  "tokenizer": {
    "task_prompt": "<s_extract_info>",
    "additional_special_tokens": [
      "<s_extract_info>",
      "<s_brand>",
      "</s_brand>",
      "<s_material>",
      "</s_material>",
      "<s_size>",
      "</s_size>"
    ]
  },
  "data": {
    "train_jsonl": "data/train_dataset.jsonl",
    "valid_jsonl": "data/validation_dataset.jsonl",
    "test_jsonl": "data/test_dataset.jsonl",
    "image_root": null,
    "image_cache_dir": "data/image_cache",
    "max_target_length": 384,
    "download_timeout": 10
  },
  "train": {
    "num_train_epochs": 8,
    "per_device_train_batch_size": 2,
    "per_device_eval_batch_size": 2,
    "learning_rate": 5e-5,
    "warmup_ratio": 0.1,
    "lr_scheduler_type": "cosine",
    "weight_decay": 0.01,
    "logging_steps": 25,
    "save_strategy": "steps",
    "save_steps": 200,
    "eval_strategy": "steps",
    "eval_steps": 200,
    "do_eval": true,
    "do_predict": true,
    "load_best_model_at_end": true,
    "metric_for_best_model": "exact_match",
    "greater_is_better": true,
    "gradient_accumulation_steps": 2,
    "dataloader_num_workers": 6,
    "dataloader_pin_memory": true,
    "dataloader_persistent_workers": true,
    "gradient_checkpointing": false,
    "fp16": true,
    "tf32": true,
    "torch_compile": false,
    "report_to": "wandb",
    "save_total_limit": 3,
    "run_name": null
  },
  "generation": {
    "max_length": 192,
    "num_beams": 5,
    "repetition_penalty": 1.2,
    "early_stopping": true,
    "do_sample": false,
    "pad_token_id": 1,
    "eos_token_id": 2
  },
  "wandb": {
    "enabled": true,
    "project": "donut-finetuning",
    "entity": "vingle",
    "name": null,
    "group": "donut",
    "tags": ["donut", "finetune", "text-tag"],
    "notes": "Finetuning Donut with validation and evaluation",
    "mode": "online",
    "allow_offline_fallback": true,
    "suppress_errors": true,
    "init_kwargs": {}
  }
}
