{
  "model_name": "naver-clova-ix/donut-base",
  "output_root": "results",
  "seed": 42,
  "tokenizer": {
    "task_prompt": "",
    "additional_special_tokens": []
  },
  "data": {
    "train_jsonl": "data/train_dataset.jsonl",
    "valid_jsonl": "data/validation_dataset.jsonl",
    "test_jsonl": "data/test_dataset.jsonl",
    "image_root": null,
    "image_cache_dir": "data/image_cache",
    "max_target_length": 384,
    "download_timeout": 10
  },
  "train": {
    "num_train_epochs": 8,
    "per_device_train_batch_size": 2,
    "per_device_eval_batch_size": 8,
    "learning_rate": 3e-5,
    "warmup_ratio": 0.1,
    "lr_scheduler_type": "cosine",
    "weight_decay": 0.01,
    "logging_steps": 25,
    "save_strategy": "epoch",
    "save_steps": 500,
    "gradient_accumulation_steps": 2,
    "dataloader_num_workers": 4,
    "dataloader_pin_memory": true,
    "gradient_checkpointing": false,
    "fp16": true,
    "report_to": "wandb",
    "save_total_limit": 3,
    "run_name": null
  },
  "generation": {
    "max_length": 384,
    "num_beams": 3,
    "early_stopping": true
  },
  "wandb": {
    "enabled": true,
    "project": "donut-finetuning",
    "entity": "vingle",
    "name": null,
    "group": "donut",
    "tags": ["donut", "finetune", "text-tag"],
    "notes": "Finetuning Donut for text tag extraction",
    "mode": "online",
    "allow_offline_fallback": true,
    "suppress_errors": true,
    "init_kwargs": {}
  }
}
